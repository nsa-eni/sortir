{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <h1>Modifier le profil</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_row(form.pseudo, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.name, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.firstname, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.email, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.phone, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.plainPassword, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.imageFilename) }}
                    <br>
                    {{ form_widget(form.imageFilename) }}
                </div>
                <div style="text-align: center">
                    <button class="btn btn-primary btn-lg btn-block text-center">Enregistrer les modifications</button>
                </div>
            </div>
        </div>
    </div>
    {##}

    <a href="{{ path('user_index') }}">Retour</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
