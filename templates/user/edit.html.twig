{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <br>
    <h1 class="text-center">Mon profil</h1>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                {% if user.imageFilename %}
                <img class="image-fluid" src="{{ asset('uploads/images/' ~ user.imageFilename) }}" alt="image profil"
                     height="200"/>
                {% else %}
                <img class="image-fluid" src="{{ asset('build/images/avatar.png') }}" alt="image profil"
                     height="200"/>
                {% endif%}
            </div>
            <div class="col-md-5">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.pseudo) }}
                    <br>
                    {{ form_widget(form.pseudo, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.name) }}
                    <br>
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.firstname) }}
                    <br>
                    {{ form_widget(form.firstname, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.email) }}
                    <br>
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.phone) }}
                    <br>
                    {{ form_widget(form.phone, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password.first) }}
                    <br>
                    {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'style':''}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password.second) }}
                    <br>
                    {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'style':'', 'placeholder':"Saisissez Ã  nouveau votre mot de passe"}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.site) }}
                    <br>
                    {{ form_widget(form.site, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.imageFilename) }}
                    <br>
                    {{ form_widget(form.imageFilename) }}
                </div>
                <div class="text-center">
                    {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary', 'style':''}}) }}
                    <a href="{{ path('home') }}"><input type="button" class="btn btn-primary" value="Retour"></a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        {% if not form.vars.valid %}
            {# Loop through every form item #}
            {% for child in form.children %}
                {# Display the errors of the form item #}
                {% if child.vars.errors is defined %}
                    {% for error in child.vars.errors %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                {% endif %}

            {% endfor %}
        {% endif %}
    </div>
    </div>
{% endblock %}
