{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <br>
    <h1 class="text-center">Mon profil</h1>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <img class="image-fluid" src="{{ asset('uploads/images/' ~ user.imageFilename) }}" alt="image profil"
                    height="200" />
            </div>
            <div class="col-md-5">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.pseudo, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.name, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.firstname, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.email, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.phone, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                    <div class="form-group">
                        {{ form_row(form.password.first, {'attr': {'class': 'form-control', 'style':''}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.password.second, {'attr': {'class': 'form-control', 'style':'', 'placeholder':"Saisissez Ã  nouveau votre mot de passe"}}) }}
                    </div>
                <div class="form-group">
                    {{ form_row(form.site, { 'attr': {'class': 'form-control', 'style':''}} ) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.imageFilename) }}
                    <br>
                    {{ form_widget(form.imageFilename) }}
                </div>
                <div class="row">
                <div class="form-group col-md-6">
                    {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary btn-lg btn-block"', 'style':''}}) }}
                </div>
                <div class="col-md-6">
                    <a href="{{ path('home') }}">
                        <button class=" btn  btn-primary btn-lg btn-block" style="">Annuler</button>
                    </a>
                </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        {% if not form.vars.valid %}
            {# Loop through every form item #}
            {% for child in form.children %}
                {# Display the errors of the form item #}
                {% if child.vars.errors is defined %}
                    {% for error in child.vars.errors %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.message }}
                        </div>
                    {% endfor %}
                {% endif %}

            {% endfor %}
        {% endif %}
    </div>
    </div>
{% endblock %}
