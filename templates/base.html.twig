<!DOCTYPE html>
<html>
<head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type"
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <title>{% block title %}Ajouter sortie{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css"
              rel="stylesheet">
    {% endblock %}

</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href={{ path('home') }}>Sortie.com</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            {% if app.user %}
                <a class="nav-item nav-link" href={{ path('home') }}>Accueil</a>
                <a class="nav-item nav-link" href={{ path('event') }}>Ajouter Sortie</a>
                <a class="nav-item nav-link" href={{ path('user_edit', { 'id' : app.user.id}) }}>Mon Profil</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="nav-item nav-link" href={{ path('site_index') }}>Gestion Sites</a>
                    <a class="nav-item nav-link" href={{ path('city_index') }}>Gestion Villes</a>
                {% endif %}
                <a class="nav-item nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
                </div>
            {% endif %}
        </div>
    </div>
</nav>
{% for label, messages in app.Flashes %}
    {% for message in messages %}
        <div class="alert-success"{{ label }}>
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
{% block body %}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
