{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container">
        <div class="">
            <div class="form-group">
                {{ form_row(registrationForm.site, { 'attr': {'class': 'form-control', 'style':''}} ) }}
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.pseudo, { 'attr': {'class': 'form-control', 'style':''}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.name, { 'attr': {'class': 'form-control', 'style':''}} ) }}
