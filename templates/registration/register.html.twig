{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container">
        <div class="">
            {{ form_start(registrationForm, {'method': 'post', 'attr': {'class': ''}}) }}
            <div class="form-group">
                {{ form_row(registrationForm.site, { 'attr': {'class': 'form-control', 'style':''}} ) }}
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.pseudo, { 'attr': {'class': 'form-control', 'style':''}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.name, { 'attr': {'class': 'form-control', 'style':''}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.firstname, { 'attr': {'class': 'form-control', 'style':''}} ) }}
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control', 'style':''}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.phone, { 'attr': {'class': 'form-control', 'style':''}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.password, { 'attr': {'class': 'form-control', 'style':''}} ) }}
            </div>
            <div style="text-align: center">
                {{ form_widget(registrationForm.submit, { 'attr': {'class': 'btn btn-primary btn-lg btn-block"', 'style':''}} ) }}
            </div>
            {{ form_end(registrationForm) }}

        </div>
    </div>


{% endblock %}
