            <div class="form-group">
                {{ form_row(registrationForm.firstname, { 'attr': {'class': 'form-control', 'style':''}} ) }}
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control', 'style':''}} ) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.phone, { 'attr': {'class': 'form-control', 'style':''}} ) }}
